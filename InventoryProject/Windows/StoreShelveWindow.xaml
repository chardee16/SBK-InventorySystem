<Window x:Class="InventoryProject.Windows.StoreShelveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:InventoryProject.Windows"
        mc:Ignorable="d"
        Title="StoreShelveWindow" Height="519.956" Width="529.599" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize">

    <Window.Resources>
        <ControlTemplate x:Key="TextBoxBaseControlTemplate" TargetType="{x:Type TextBoxBase}">
            <Border Background="{TemplateBinding Background}" 
                x:Name="Bd" BorderBrush="Gray"
                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                <ScrollViewer x:Name="PART_ContentHost"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" TargetName="Bd"/>
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                </Trigger>
                <Trigger Property="Width" Value="Auto">
                    <Setter Property="MinWidth" Value="100"/>
                </Trigger>
                <Trigger Property="Height" Value="Auto">
                    <Setter Property="MinHeight" Value="20"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="GridBarraTitulo" Grid.ColumnSpan="2" Background="#FF222B4B">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0">

                <Button x:Name="ButtonFechar"  VerticalAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}"  Click="ButtonFechar_Click">
                    <materialDesign:PackIcon Kind="Close" Foreground="White" Height="25" Width="25"/>
                </Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFB8D4EE" Offset="0.263"/>
                    <GradientStop Color="#FF74B6F3" Offset="0.888"/>
                </LinearGradientBrush>
            </Grid.Background>

            <StackPanel Orientation="Vertical" Margin="0,28,0,0" Height="149" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal">
                    <Label FontSize="15" Content="ShelfID: " FontWeight="Bold" Margin="25,0,0,0" HorizontalAlignment="Left" FontFamily="Microsoft JhengHei" Width="166" />
                    <TextBox x:Name="txt_ProductID" IsReadOnly="True" Template="{StaticResource TextBoxBaseControlTemplate}" Text="{Binding Path=ShelfID,UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center" BorderThickness="1" Margin="0,0,0,0" Width="305" Height="35" Background="#FFEBEBEB" FontSize="18"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label FontSize="15" Content="ShelfDescription:" FontWeight="Bold" Margin="25,0,0,0" HorizontalAlignment="Left" FontFamily="Microsoft JhengHei" Width="166" />
                    <TextBox x:Name="txt_ProductName" Template="{StaticResource TextBoxBaseControlTemplate}" Text="{Binding Path=ShelfDescription,UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center" BorderThickness="1" Margin="0,0,0,0" Width="306" Height="35" Background="#FFEBEBEB" FontSize="18"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0"/>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,129,0,0" Height="36" VerticalAlignment="Top">
                <!--<Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Background="#FFEBEBEB" Margin="10,0,0,0"  >
                    <CheckBox x:Name="chck_Members" Content="IsActive" IsChecked="{Binding Path=IsActive}" FontFamily="Microsoft JhengHei" Background="#FF17A437"></CheckBox>
                </Border>-->
                <!--<Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Background="#FFEBEBEB" Margin="10,0,0,0"  >
                    <CheckBox x:Name="chck_Members" Content="IsActive" IsChecked="{Binding Path=IsActive}" FontFamily="Microsoft JhengHei" Background="#FF17A437"></CheckBox>
                </Border>-->
                <Button x:Name="btn_Save" Margin="206,3,0,3" Content="SAVE" HorizontalAlignment="Center" Width="89" Height="30" Background="#FFEAEAEA" BorderBrush="#FF2E2E2E" FontFamily="Tempus Sans ITC" FontWeight="Bold" Click="btn_Save_Click" />
                <Button x:Name="btn_Edit" Content="EDIT"  Margin="10,3,0,3" HorizontalAlignment="Center" Width="89" Height="30" Background="#FFEAEAEA" BorderBrush="#FF2E2E2E" FontFamily="Tempus Sans ITC" FontWeight="Bold" Click="btn_Edit_Click" />
                <Button x:Name="btn_Cancel" Content="CANCEL"  Margin="10,3,0,3" HorizontalAlignment="Center" Width="89" Height="30" Background="#FFEAEAEA" BorderBrush="#FF2E2E2E" FontFamily="Tempus Sans ITC" FontWeight="Bold" Click="btn_Cancel_Click" />
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="0,182,0,0" Height="298" VerticalAlignment="Top">
                <DataGrid x:Name="dg_storeshelf" PreviewMouseDoubleClick="dg_storeshelf_PreviewMouseDoubleClick" Margin="10,0" AutoGenerateColumns="False" ItemsSource="{Binding ShelveClass, UpdateSourceTrigger=PropertyChanged}"  CanUserAddRows="False" Height="302" >
                    <DataGrid.RowStyle>
                        <Style TargetType="{x:Type DataGridRow}">

                            <Setter Property="Background" Value="{Binding RowColor, TargetNullValue=White}"/>
                            <!--<EventSetter Event="UIElement.PreviewKeyDown" Handler="DG_Beneficiaries_PreviewKeyDown"/>-->
                        </Style>

                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn IsReadOnly="True" Header="ShelfID" Width="1.5*" Binding="{Binding ShelfID, UpdateSourceTrigger=PropertyChanged}" />
                        <DataGridTextColumn IsReadOnly="True" Header="Shelf Description" Width="3.5*" Binding="{Binding ShelfDescription, UpdateSourceTrigger=PropertyChanged}"/>
                    </DataGrid.Columns>

                </DataGrid>

            </StackPanel>
        </Grid>
    </Grid>
</Window>
