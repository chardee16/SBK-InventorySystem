<Window x:Class="InventoryProject.Windows.AddItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:InventoryProject.Windows" 
        xmlns:currency="clr-namespace:CurrencyTextBoxControl;assembly=CurrencyTextbox"
        mc:Ignorable="d"
        Title="AddItemWindow" Height="460" Width="420"  ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" UseLayoutRounding="True" AllowsTransparency="True">
    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>
    <Window.Resources>
        <ControlTemplate x:Key="TextBoxBaseControlTemplate" TargetType="{x:Type TextBoxBase}">
            <Border Background="{TemplateBinding Background}" 
                x:Name="Bd" BorderBrush="Black"
                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="3">
                <ScrollViewer x:Name="PART_ContentHost"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" TargetName="Bd"/>
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                </Trigger>
                <Trigger Property="Width" Value="Auto">
                    <Setter Property="MinWidth" Value="100"/>
                </Trigger>
                <Trigger Property="Height" Value="Auto">
                    <Setter Property="MinHeight" Value="20"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>


    <Grid>
        <Border Background="#FFE4E4E4" BorderBrush="Black" BorderThickness="1" CornerRadius="5" Margin="10">
            <Border.Effect>
                <DropShadowEffect/>
            </Border.Effect>
            
            <StackPanel Orientation="Vertical" Margin="0,10,0,0" HorizontalAlignment="Center">
                <Label Content="ADD ITEM" FontSize="20" FontWeight="Bold" FontFamily="Champagne &amp; Limousines" HorizontalContentAlignment="Center"/>

                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                    <Label Content="Item Code:" Width="100" FontSize="16" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Path = ItemCode,UpdateSourceTrigger=PropertyChanged}" Width="150" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="16"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="Item Name:"  Width="100" FontSize="16" FontWeight="Bold"/>
                    <TextBox x:Name="txt_ItemName" Text="{Binding Path = ItemName,UpdateSourceTrigger=PropertyChanged}" Template="{StaticResource TextBoxBaseControlTemplate}" Height="30"  Width="200" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="16" BorderThickness="1"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="Description:"  Width="100" FontSize="16" FontWeight="Bold"/>
                    <TextBox Text="{Binding Path = ItemDescription,UpdateSourceTrigger=PropertyChanged}" Template="{StaticResource TextBoxBaseControlTemplate}" Height="30"  Width="200" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="16" BorderThickness="1"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="Category:"  Width="100" FontSize="16" FontWeight="Bold"/>
                    <ComboBox ItemsSource="{Binding Path=itemCategories,UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="CategoryID" SelectedValue="{Binding CategoryID}" DisplayMemberPath="CategoryDescription" Height="30"  Width="230" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="16" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="Price:"  Width="100" FontSize="16" FontWeight="Bold"/>
                    <currency:CurrencyTextBox x:Name="myCurrencyTextBox" Number="{Binding Price, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Template="{StaticResource TextBoxBaseControlTemplate}" Height="30" StringFormat="N2" Width="200" Margin="20,0,0,0" BorderThickness="1" FontSize="16">
                        <currency:CurrencyTextBox.Style>
                            <Style TargetType="{x:Type currency:CurrencyTextBox}">
                                <Style.Triggers>
                                    <Trigger Property="Validation.HasError" Value="True">
                                        <Setter Property="ToolTip" Value="Amount" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </currency:CurrencyTextBox.Style>
                    </currency:CurrencyTextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="Stocks:"  Width="100" FontSize="16" FontWeight="Bold"/>
                    <TextBox Text="{Binding Path = Stock,UpdateSourceTrigger=PropertyChanged}" Template="{StaticResource TextBoxBaseControlTemplate}" Height="30"  Width="120" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="16" BorderThickness="1"/>
                    <ComboBox ItemsSource="{Binding Path=unitList,UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="UnitID" SelectedValue="{Binding UnitID}" DisplayMemberPath="UnitAbbr"  Height="30" Text="Pcs" Width="80" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="16" />
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="Barcode:"  Width="100" FontSize="16" FontWeight="Bold"/>
                    <TextBox Text="{Binding Path = Barcode,UpdateSourceTrigger=PropertyChanged}" Template="{StaticResource TextBoxBaseControlTemplate}" Height="30"  Width="240" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="16" BorderThickness="1"/>

                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="btn_Add" Width="100" Height="75" Margin="0,0,0,0" Background="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Left" Click="btn_Add_Click">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="AddCircle"  Height="50" Width="50" Foreground="Black" />
                            <TextBlock  Text="ADD" Foreground="Black" FontFamily="Champagne &amp; Limousines" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btn_Close" Width="100" Height="75" Margin="0,0,0,0" Background="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Left" Click="btn_Close_Click">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="CloseBoxes"  Height="50" Width="50" Foreground="Black" />
                            <TextBlock Text="BACK" Foreground="Black" FontFamily="Champagne &amp; Limousines" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

            </StackPanel>
        </Border>
        
    </Grid>
</Window>
