<Window x:Class="InventoryProject.Windows.StockLogs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:InventoryProject.Windows"
        mc:Ignorable="d"
        Title="StockLogs" Height="350" Width="462"  ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" UseLayoutRounding="True" AllowsTransparency="True">

    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>
    <Window.Resources>
        <ControlTemplate x:Key="TextBoxBaseControlTemplate" TargetType="{x:Type TextBoxBase}">
            <Border Background="{TemplateBinding Background}" 
                x:Name="Bd" BorderBrush="Black"
                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                <ScrollViewer x:Name="PART_ContentHost"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" TargetName="Bd"/>
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                </Trigger>
                <Trigger Property="Width" Value="Auto">
                    <Setter Property="MinWidth" Value="100"/>
                </Trigger>
                <Trigger Property="Height" Value="Auto">
                    <Setter Property="MinHeight" Value="20"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>

    <Grid>
        <Border Background="#FFE4E4E4" BorderBrush="Black" BorderThickness="1" CornerRadius="5" Margin="10">
            <Border.Effect>
                <DropShadowEffect/>
            </Border.Effect>

            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" Height="48">
                    <Label Content="STOCK LOGS" FontSize="20" FontWeight="Bold" Margin="130,10,90,0" FontFamily="Champagne &amp; Limousines" HorizontalContentAlignment="Center"/>
                    <Button x:Name="btn_Close" Background="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Left" Click="btn_Close_Click" Height="Auto" Width="80">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="CloseBoxes"  Foreground="Black" />
                            <TextBlock Text="CLOSE" Foreground="Black" FontFamily="Champagne &amp; Limousines" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <StackPanel Margin="0,10,0,0">
                    <DataGrid x:Name="dg_logs" Height="268" CanUserSortColumns="False" CanUserAddRows="False" CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserResizeRows="False"  AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding ItemDescription,UpdateSourceTrigger=PropertyChanged}" FontSize="10" Width="100" IsReadOnly="True">
                                <DataGridTextColumn.HeaderTemplate >
                                    <DataTemplate>
                                        <TextBlock Text="DESCRIPTION" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" FontSize="10"/>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                                <DataGridTextColumn.ElementStyle>
                                    <Style>
                                        <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                                        <Setter Property="TextBlock.TextAlignment" Value="Left"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Quantity,UpdateSourceTrigger=PropertyChanged}" FontSize="10" Width="85" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style>
                                        <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                                        <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                                <DataGridTextColumn.HeaderTemplate >
                                    <DataTemplate>
                                        <TextBlock Text="QUANTITY" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" FontSize="10"/>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding DateTimeAdded,UpdateSourceTrigger=PropertyChanged}" FontSize="10" Width="150" IsReadOnly="True">
                                <DataGridTextColumn.HeaderTemplate >
                                    <DataTemplate>
                                        <TextBlock Text="DATETIME ADDED" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" FontSize="10"/>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Username,UpdateSourceTrigger=PropertyChanged}" FontSize="10" Width="100" IsReadOnly="True">
                                <DataGridTextColumn.HeaderTemplate >
                                    <DataTemplate>
                                        <TextBlock Text="USER" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" FontSize="10"/>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>

                <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="99,0" Height="73">
                    <Button Visibility="Hidden" x:Name="btn_Add" Width="100" Height="75" Margin="0,0,0,0" Background="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Left" Click="btn_Add_Click">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="ContentSave"  Height="30" Width="50" Foreground="Black" />
                            <TextBlock  Text="ADD" Foreground="Black" FontFamily="Champagne &amp; Limousines" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btn_Close" Width="78" Height="75" Margin="0,0,0,-2" Background="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Left" Click="btn_Close_Click">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="CloseBoxes"  Foreground="Black" />
                            <TextBlock Text="CLOSE" Foreground="Black" FontFamily="Champagne &amp; Limousines" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>-->

            </StackPanel>


        </Border>
    </Grid>
</Window>
