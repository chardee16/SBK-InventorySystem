<Window x:Class="InventoryProject.Windows.OtherIncomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:currency="clr-namespace:CurrencyTextBoxControl;assembly=CurrencyTextbox"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:InventoryProject.Windows"
        mc:Ignorable="d"
        Title="OtherIncomeWindow" Height="536.358" Width="420"  ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" UseLayoutRounding="True" AllowsTransparency="True" PreviewKeyDown="HandleKeys">
    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>
    <Window.Resources>
        <ControlTemplate x:Key="TextBoxBaseControlTemplate" TargetType="{x:Type TextBoxBase}">
            <Border Background="{TemplateBinding Background}" 
                x:Name="Bd" BorderBrush="Black"
                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                <ScrollViewer x:Name="PART_ContentHost"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" TargetName="Bd"/>
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                </Trigger>
                <Trigger Property="Width" Value="Auto">
                    <Setter Property="MinWidth" Value="100"/>
                </Trigger>
                <Trigger Property="Height" Value="Auto">
                    <Setter Property="MinHeight" Value="20"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>




    <Grid Margin="0,0,0,-9">
        <Border Background="#FFE4E4E4" BorderBrush="Black" BorderThickness="0" CornerRadius="5" Margin="10">
            <Border.Effect>
                <DropShadowEffect/>
            </Border.Effect>

            <StackPanel Orientation="Vertical">
                <Label Content="Other Income" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,0" Padding="20,5,0,0" FontFamily="Book Antiqua" HorizontalContentAlignment="Left"/>
                <StackPanel Orientation="Horizontal" Margin="30,10,0,0">
                    <Label Content="Transaction Date:"  Width="150" FontSize="16" FontFamily="Bahnschrift Light" VerticalContentAlignment="Center"/>
                    <DatePicker Width="199" FontSize="16" HorizontalContentAlignment="Center" x:Name="dtp_TransDate" SelectedDate="{Binding Path=TransactionDate,Mode=TwoWay,TargetNullValue={x:Static System:DateTime.Now}}"  BorderBrush="#FF949494" materialDesign:CalendarAssist.IsHeaderVisible="True" materialDesign:HintAssist.Hint="Transaction Date" BorderThickness="1" FontWeight="SemiBold" Margin="10,0,0,0" Padding="5,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="30,10,0,0">
                    <Label Content="AMOUNT TO PAY:" Width="150" FontSize="16"  FontFamily="Bahnschrift Light"/>
                    <TextBlock Text="{Binding TotalAmount, StringFormat=\{0:#\,#.00;#(#\,##0.00)\}, UpdateSourceTrigger=PropertyChanged}" TextAlignment="Right" FontWeight="Bold"  Width="200" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="20"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="30,10,0,0">
                    <Label Content="TENDERED:"  Width="150" FontSize="16" FontFamily="Bahnschrift Light" VerticalContentAlignment="Center"/>
                    <currency:CurrencyTextBox KeyUp="txt_Price_KeyUp" x:Name="txt_Price" Number="{Binding TenderedAmount, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Height="30" StringFormat="N2" Width="200" Margin="10,0,0,0" BorderThickness="1" FontWeight="SemiBold" FontSize="20" PreviewKeyDown="txt_Price_PreviewKeyDown">
                        <currency:CurrencyTextBox.Style>
                            <Style TargetType="{x:Type currency:CurrencyTextBox}">
                                <Style.Triggers>
                                    <Trigger Property="Validation.HasError" Value="True">
                                        <Setter Property="ToolTip" Value="Amount" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </currency:CurrencyTextBox.Style>
                    </currency:CurrencyTextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="30,10,0,0">
                    <Label Content="Change:"  Width="150" FontSize="16" FontFamily="Bahnschrift Light"/>
                    <TextBlock Text="{Binding Path = ChangeAmount,UpdateSourceTrigger=PropertyChanged,StringFormat='{}{0:#,#.00;#(#,##0.00)}'}" FontSize="16"  Width="200" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="30,10,0,0">
                    <StackPanel Orientation="Vertical">
                        <Label  Margin="0,0,0,0" Content="Explanation:"  Width="96" FontSize="16" FontFamily="Bahnschrift Light"/>
                        <TextBox Width="319" Background="White" Height="173" x:Name="txt_Explanation" Text="{Binding Path=Explanation, UpdateSourceTrigger=PropertyChanged}" BorderBrush="#FF949494" AcceptsReturn="True" BorderThickness="1" FontWeight="SemiBold" Margin="10,0,0,0" Padding="5,0,0,0"/>
                    </StackPanel>
                </StackPanel>



                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                    <Button x:Name="btn_Save" Width="150" Height="75" Margin="0,0,0,0"  HorizontalAlignment="Left" Click="btn_Save_Click">
                        <Button.Effect>
                            <DropShadowEffect Color="#FF999999"/>
                        </Button.Effect>
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF9AD6AA" Offset="0"/>
                                <GradientStop Color="#FF50AC65" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="ContentSave"  Height="30" Width="50" Foreground="Black" />
                            <TextBlock  Text="SAVE" Foreground="Black" FontFamily="Book Antiqua" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btn_Close" Width="150" Height="75" Margin="15,0,0,0"  HorizontalAlignment="Left" Click="btn_Close_Click">
                        <Button.Effect>
                            <DropShadowEffect Color="#FF999999"/>
                        </Button.Effect>
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFE8B9AB" Offset="0"/>
                                <GradientStop Color="#FFDA7658" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="CloseBoxes"  Height="30" Width="50" Foreground="Black" />
                            <TextBlock Text="CANCEL" Foreground="Black" FontFamily="Book Antiqua" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

            </StackPanel>


        </Border>



    </Grid>
</Window>
