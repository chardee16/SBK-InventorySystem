<Window x:Class="InventoryProject.Windows.ClientFindWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:InventoryProject.Windows"
        mc:Ignorable="d"
        Title="ClientFind" Height="256.083" Width="509.297" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" UseLayoutRounding="True" AllowsTransparency="True" PreviewKeyDown="HandleKeys">

    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>
    <Window.Resources>
        <ControlTemplate x:Key="TextBoxBaseControlTemplate" TargetType="{x:Type TextBoxBase}">
            <Border Background="{TemplateBinding Background}" 
                x:Name="Bd" BorderBrush="Black"
                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                <ScrollViewer x:Name="PART_ContentHost"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" TargetName="Bd"/>
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                </Trigger>
                <Trigger Property="Width" Value="Auto">
                    <Setter Property="MinWidth" Value="100"/>
                </Trigger>
                <Trigger Property="Height" Value="Auto">
                    <Setter Property="MinHeight" Value="20"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>

    <Grid>
        <Border Background="#FFE4E4E4" BorderBrush="Black" BorderThickness="0" CornerRadius="5" Margin="10">
            <Border.Effect>
                <DropShadowEffect/>
            </Border.Effect>

            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" Margin="30,30,0,0">
                    <Label Content="ClientID:" VerticalContentAlignment="Top" Width="111" FontSize="16" FontFamily="Bahnschrift Light" FontWeight="Bold"/>
                    <TextBox Width="239" GotFocus="txt_ClientID_GotFocus" Height="27" x:Name="txt_ClientID" Text="{Binding Path = ClientID,UpdateSourceTrigger=PropertyChanged}" BorderBrush="#FF949494" materialDesign:HintAssist.Hint="ClientID" BorderThickness="1" FontWeight="SemiBold" Margin="20,0,0,0" Padding="5,0,0,0" FontSize="16" FontFamily="Bahnschrift Light">
                    </TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="30,20,0,0">
                    <Label Content="Client Name:" VerticalContentAlignment="Top" Width="111" FontSize="16" FontFamily="Bahnschrift Light" FontWeight="Bold"/>
                    <TextBox Width="300" GotFocus="txt_ClientName_GotFocus" Height="27" x:Name="txt_ClientName" Text="{Binding Path = ClientName, UpdateSourceTrigger=PropertyChanged}" BorderBrush="#FF949494" materialDesign:HintAssist.Hint="Client Name" BorderThickness="1" FontWeight="SemiBold" Margin="20,0,0,0" Padding="5,0,0,0" FontSize="16" FontFamily="Bahnschrift Light"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                    <Button x:Name="btn_Ok" Width="142" Height="51" Margin="0,0,0,0"  HorizontalAlignment="Left" Click="btn_Ok_Click">
                        <Button.Effect>
                            <DropShadowEffect Color="#FF999999"/>
                        </Button.Effect>
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF9AD6AA" Offset="0"/>
                                <GradientStop Color="#FF50AC65" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="Approve"  Height="30" Width="50" Foreground="Black" />
                            <TextBlock  Text="OK" Foreground="Black" FontFamily="Book Antiqua" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btn_Close" Width="142" Height="51" Margin="15,0,0,0"  HorizontalAlignment="Left" Click="btn_Close_Click">
                        <Button.Effect>
                            <DropShadowEffect Color="#FF999999"/>
                        </Button.Effect>
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFE8B9AB" Offset="0"/>
                                <GradientStop Color="#FFDA7658" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="CloseBoxes"  Height="30" Width="50" Foreground="Black" />
                            <TextBlock Text="CANCEL" Foreground="Black" FontFamily="Book Antiqua" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

            </StackPanel>
           
        </Border>
    </Grid>
</Window>
