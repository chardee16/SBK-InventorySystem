<Window x:Class="InventoryProject.Windows.AddStockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
         xmlns:currency="clr-namespace:CurrencyTextBoxControl;assembly=CurrencyTextbox"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:InventoryProject.Windows"
        mc:Ignorable="d"
        Title="AddStockWindow" Height="350" Width="420"  ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" UseLayoutRounding="True" AllowsTransparency="True">

    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>
    <Window.Resources>
        <ControlTemplate x:Key="TextBoxBaseControlTemplate" TargetType="{x:Type TextBoxBase}">
            <Border Background="{TemplateBinding Background}" 
                x:Name="Bd" BorderBrush="Black"
                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                <ScrollViewer x:Name="PART_ContentHost"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" TargetName="Bd"/>
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                </Trigger>
                <Trigger Property="Width" Value="Auto">
                    <Setter Property="MinWidth" Value="100"/>
                </Trigger>
                <Trigger Property="Height" Value="Auto">
                    <Setter Property="MinHeight" Value="20"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>

    <Grid>
        <Border Background="#FFE4E4E4" BorderBrush="Black" BorderThickness="1" CornerRadius="5" Margin="10">
            <Border.Effect>
                <DropShadowEffect/>
            </Border.Effect>

            <StackPanel Orientation="Vertical">
                <Label Content="ADD STOCK" FontSize="20" FontWeight="Bold" Margin="0,10,0,0" FontFamily="Champagne &amp; Limousines" HorizontalContentAlignment="Center"/>

                <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
                    <Label Content="Item Code:" Width="100" FontSize="16" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Path = ItemCode,UpdateSourceTrigger=PropertyChanged}" Width="150" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="16"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="15,10,0,0">
                    <Label Content="Item Name:"  Width="100" FontSize="16" FontWeight="Bold"/>
                    <TextBlock x:Name="txt_ItemName" Text="{Binding Path = ItemName,UpdateSourceTrigger=PropertyChanged}" FontSize="16"  Width="200" VerticalAlignment="Center" Margin="20,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="15,10,0,0">
                    <Label Content="Description:"  Width="100" FontSize="16" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Path = ItemDescription,UpdateSourceTrigger=PropertyChanged}" FontSize="16"  Width="200" VerticalAlignment="Center" Margin="20,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="15,10,0,0">
                    <Label Content="Expiry Date:" FontSize="16" VerticalContentAlignment="Bottom" FontWeight="Bold" Width="100" Margin="0,0,0,0"/>
                    <DatePicker Width="150"  x:Name="dtp_ExpiryDate" SelectedDate="{Binding Path=ExpiryDate,Mode=TwoWay,TargetNullValue={x:Static System:DateTime.Now}}" FontSize="16"  BorderBrush="#FF949494" materialDesign:CalendarAssist.IsHeaderVisible="True" materialDesign:HintAssist.Hint="Expiry Date" BorderThickness="1" FontWeight="SemiBold" Margin="20,0,0,0" Padding="5,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="15,10,0,0">
                    <Label Content="Stocks:"  Width="100" FontSize="16" FontWeight="Bold"/>
                    <!--<TextBox Text="{Binding Path = Stock,UpdateSourceTrigger=PropertyChanged}" Template="{StaticResource TextBoxBaseControlTemplate}" HorizontalContentAlignment="Right" Height="30"  Width="120" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="16" BorderThickness="1"/>-->
                    <currency:CurrencyTextBox Number="{Binding Path=Stock, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" StringFormat="N2" Width="150" Margin="20,0,0,0" BorderThickness="1" FontWeight="SemiBold" FontSize="14">
                        <currency:CurrencyTextBox.Style>
                            <Style TargetType="{x:Type currency:CurrencyTextBox}">
                                <Style.Triggers>
                                    <Trigger Property="Validation.HasError" Value="True">
                                        <Setter Property="ToolTip" Value="Amount" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </currency:CurrencyTextBox.Style>
                    </currency:CurrencyTextBox>
                </StackPanel>


                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="btn_Add" Width="100" Height="75" Margin="0,0,0,0" Background="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Left" Click="btn_Add_Click">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="ContentSave"  Height="30" Width="50" Foreground="Black" />
                            <TextBlock  Text="ADD" Foreground="Black" FontFamily="Champagne &amp; Limousines" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btn_Close" Width="100" Height="75" Margin="0,0,0,0" Background="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Left" Click="btn_Close_Click">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="CloseBoxes"  Height="30" Width="50" Foreground="Black" />
                            <TextBlock Text="BACK" Foreground="Black" FontFamily="Champagne &amp; Limousines" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

            </StackPanel>
            
            
        </Border>
    </Grid>
</Window>
