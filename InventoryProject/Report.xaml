<Window x:Class="InventoryProject.Report"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Viewer="clr-namespace:SAPBusinessObjects.WPF.Viewer;assembly=SAPBusinessObjects.WPF.Viewer"
        xmlns:local="clr-namespace:InventoryProject"
        mc:Ignorable="d"
        Title="Report" Height="390" Width="722" WindowStartupLocation="CenterScreen" WindowState="Maximized" PreviewKeyDown="Window_PreviewKeyDown" >
    <Window.Resources>
        <Style x:Key="MyButton" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" BorderThickness="0" BorderBrush="Black" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.4" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>

        <Viewer:CrystalReportsViewer x:Name="_CrystalReport" ToggleSidePanel="None"  ShowExportButton="False" ShowCopyButton="False" ShowSearchTextButton="False" Margin="0,0,0.2,-0.2"/>
        <Button x:Name="print" Content=" " TabIndex="2" HorizontalAlignment="Left" Margin="346,15,0,0" VerticalAlignment="Top" Width="25" Height="25" Click="print_Click"  Style="{StaticResource MyButton}" ToolTip="Print Document" >
            <Button.Background>
                <ImageBrush ImageSource="Images/Printer-icon.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="exportToExcel" TabIndex="3" IsTabStop="False" Content=" " HorizontalAlignment="Left" Margin="376,15,0,0" VerticalAlignment="Top" Width="25" Height="25" Click="exportExcel"  Style="{StaticResource MyButton}" ToolTip="Export to Excel">
            <Button.Background>
                <ImageBrush ImageSource="Images/microsoft_excel_n.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="exportToPDF" Content=" " HorizontalAlignment="Left" Margin="404,15,0,0" VerticalAlignment="Top" Width="25" Height="25" Click="exportToPDF_Click"  Style="{StaticResource MyButton}" ToolTip="Export to PDF" RenderTransformOrigin="8.4,0.6">
            <Button.Background>
                <ImageBrush ImageSource="Images/PDF.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
