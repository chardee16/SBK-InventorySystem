<Page x:Class="InventoryProject.Pages.InventoryManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:System="clr-namespace:System;assembly=mscorlib"
      xmlns:local="clr-namespace:InventoryProject.Pages"
      xmlns:currency="clr-namespace:CurrencyTextBoxControl;assembly=CurrencyTextbox"
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="1280"
      Title="InventoryManagementPage" PreviewKeyDown="HandleKeys">

    <Page.Resources>
        <ControlTemplate x:Key="TextBoxBaseControlTemplate" TargetType="{x:Type TextBoxBase}">
            <Border Background="{TemplateBinding Background}" 
                x:Name="Bd" BorderBrush="Black"
                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                <ScrollViewer x:Name="PART_ContentHost"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" TargetName="Bd"/>
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                </Trigger>
                <Trigger Property="Width" Value="Auto">
                    <Setter Property="MinWidth" Value="100"/>
                </Trigger>
                <Trigger Property="Height" Value="Auto">
                    <Setter Property="MinHeight" Value="20"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

    </Page.Resources>

    <Grid Background="#FFE4E4E4">
        <StackPanel Orientation="Vertical">
            <StackPanel Width="1240" Orientation="Vertical" Height="330" Margin="0,20,0,0">
                <Border BorderBrush="White" BorderThickness="0" Height="280" Margin="0,0,0,0" CornerRadius="5" Background="White">
                    <!--<Border.Effect>
                        <DropShadowEffect Color="#FFB2B2B2"/>
                    </Border.Effect>-->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                                <Label Content="Item Name*" VerticalContentAlignment="Bottom" FontWeight="Bold" Width="100"/>
                                <TextBox Width="200" x:Name="txt_ItemName" Text="{Binding Path = ItemName,UpdateSourceTrigger=PropertyChanged}"  BorderBrush="#FF949494" materialDesign:HintAssist.Hint="Item Name" BorderThickness="1" FontWeight="SemiBold" Margin="10,0,0,0" Padding="5,0,0,0"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                                <Label Content="Description*" VerticalContentAlignment="Top" FontWeight="Bold" Width="100"/>
                                <TextBox Width="400" Height="50" x:Name="txt_ItemDescription" Text="{Binding Path = ItemDescription,UpdateSourceTrigger=PropertyChanged}" BorderBrush="#FF949494" materialDesign:HintAssist.Hint="Description" AcceptsReturn="True" BorderThickness="1" FontWeight="SemiBold" Margin="10,0,0,0" Padding="5,0,0,0"/>
                            </StackPanel>


                            <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                                <Label Content="Name*" VerticalContentAlignment="Bottom" FontWeight="Bold" Width="100"/>
                                <ComboBox x:Name="cmb_GenericMedicine" ItemsSource="{Binding Path=genericMedList,UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="GenericID" SelectedValue="{Binding GenericID}" DisplayMemberPath="GenericName" Width="350" materialDesign:ComboBoxAssist.ShowSelectedItem="true" materialDesign:HintAssist.Hint="Select Name" Margin="10,0,0,0" Padding="0,10,0,5"/>
                                <Button x:Name="btn_Name" Width="30" Height="25" Margin="20,0,0,0" BorderBrush="Black" ToolTip="Add Generic Name" VerticalAlignment="Bottom" HorizontalAlignment="Right" BorderThickness="1" Padding="0" Click="btn_Name_Click">
                                    <!--<Button.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            --><!--<GradientStop Color="#FF979494" Offset="0.058"/>
                                            <GradientStop Color="#FFE4E2E2" Offset="0.913"/>--><!--
                                        </LinearGradientBrush>
                                    </Button.Background>-->
                                    <Button.BitmapEffect>
                                        <DropShadowBitmapEffect Color="Black" Direction="320" Softness="0" ShadowDepth="10" Opacity="0.5" />
                                    </Button.BitmapEffect>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="Add"  Height="25" Width="25" Foreground="Black" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                                <Label Content="Category*" VerticalContentAlignment="Bottom" FontWeight="Bold" Width="100"/>
                                <ComboBox x:Name="cmb_Category" Width="350" ItemsSource="{Binding Path=itemCategories,UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="CategoryID" SelectedValue="{Binding CategoryID}" DisplayMemberPath="CategoryDescription" materialDesign:ComboBoxAssist.ShowSelectedItem="true" materialDesign:HintAssist.Hint="Select Category" Margin="10,0,0,0" Padding="0,10,0,5"/>
                                <Button x:Name="btn_AddCategory"  Width="30" Height="25" Margin="20,0,0,0" BorderBrush="Black" ToolTip="Add Category" VerticalAlignment="Bottom" HorizontalAlignment="Right" BorderThickness="1" Padding="0" Click="btn_AddCategory_Click">
                                    <!--<Button.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            --><!--<GradientStop Color="#FF979494" Offset="0.058"/>
                                            <GradientStop Color="#FFE4E2E2" Offset="0.913"/>--><!--
                                        </LinearGradientBrush>
                                    </Button.Background>-->
                                    <Button.BitmapEffect>
                                        <DropShadowBitmapEffect Color="Black" Direction="320" Softness="0" ShadowDepth="10" Opacity="0.5" />
                                    </Button.BitmapEffect>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="Add"  Height="25" Width="25" Foreground="Black" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>


                            <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                                <Label Content="Store Shelve*" VerticalContentAlignment="Bottom" FontWeight="Bold" Width="100"/>
                                <ComboBox x:Name="cmb_Shelves" Width="250"  ItemsSource="{Binding Path=shelveList,UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="ShelfID" SelectedValue="{Binding ShelfID}" DisplayMemberPath="ShelfDescription" materialDesign:ComboBoxAssist.ShowSelectedItem="true" materialDesign:HintAssist.Hint="Select Store Shelve" Margin="10,0,0,0" Padding="0,10,0,5"/>
                                <Button x:Name="btn_AddStoreShelve" Width="30" Height="25" Margin="20,0,0,0" BorderBrush="Black" ToolTip="Add Store Shelve" VerticalAlignment="Bottom" HorizontalAlignment="Right" BorderThickness="1" Padding="0" Click="btn_AddStoreShelve_Click">
                                    <!--<Button.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            --><!--<GradientStop Color="#FF979494" Offset="0.058"/>
                                            <GradientStop Color="#FFE4E2E2" Offset="0.913"/>--><!--
                                        </LinearGradientBrush>
                                    </Button.Background>-->
                                    <Button.BitmapEffect>
                                        <DropShadowBitmapEffect Color="Black" Direction="320" Softness="0" ShadowDepth="10" Opacity="0.5" />
                                    </Button.BitmapEffect>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="Add"  Height="25" Width="25" Foreground="Black" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>



                            <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                                <Label Content="Supplier*" VerticalContentAlignment="Bottom" FontWeight="Bold" Width="100"/>
                                <ComboBox x:Name="cmb_Supplier" Width="250"  ItemsSource="{Binding Path=supplierList,UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="SupplierID" SelectedValue="{Binding SupplierID}" DisplayMemberPath="SupplierDescription" materialDesign:ComboBoxAssist.ShowSelectedItem="true" materialDesign:HintAssist.Hint="Select Supplier" Margin="10,0,0,0" Padding="0,10,0,5"/>
                                <Button x:Name="btn_Supplier" Width="30" Height="25" Margin="20,0,0,0" BorderBrush="Black" ToolTip="Add Supplier" VerticalAlignment="Bottom" HorizontalAlignment="Right" BorderThickness="1" Padding="0" Click="btn_Supplier_Click">
                                    <!--<Button.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            --><!--<GradientStop Color="#FF979494" Offset="0.058"/>
                                            <GradientStop Color="#FFE4E2E2" Offset="0.913"/>--><!--
                                        </LinearGradientBrush>
                                    </Button.Background>-->
                                    <Button.BitmapEffect>
                                        <DropShadowBitmapEffect Color="Black" Direction="320" Softness="0" ShadowDepth="10" Opacity="0.5" />
                                    </Button.BitmapEffect>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="Add"  Height="25" Width="25" Foreground="Black" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>







                        </StackPanel>

                        <StackPanel Orientation="Vertical" Margin="100,0,0,0">

                            <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                                <Label Content="BARCODE*" VerticalContentAlignment="Bottom" FontWeight="Bold" Width="100"/>
                                <TextBox Width="480" x:Name="txt_Barcode" Text="{Binding Path = Barcode,UpdateSourceTrigger=PropertyChanged}"  BorderBrush="#FF949494" materialDesign:HintAssist.Hint="Barcode" BorderThickness="1" FontWeight="SemiBold" Margin="10,0,0,0" Padding="5,0,0,0"/>
                            </StackPanel>
                            
                            
                            <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                                <Label Content="Purchase Price*" VerticalContentAlignment="Bottom" FontWeight="Bold" Width="100"/>
                                <!--<TextBox Width="200" x:Name="txt_PurchasePrice" Text="{Binding Path = PurchasePrice,UpdateSourceTrigger=PropertyChanged}" BorderBrush="#FF949494" materialDesign:HintAssist.Hint="Purchase Price" BorderThickness="1" FontWeight="SemiBold" Margin="10,0,0,0" Padding="5,0,0,0"/>-->
                                <currency:CurrencyTextBox x:Name="myCurrencyTextBox" Number="{Binding PurchasePrice, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" StringFormat="N2" Width="200" Margin="10,0,0,0" BorderThickness="1" FontWeight="SemiBold" FontSize="14" PreviewKeyDown="myCurrencyTextBox_PreviewKeyDown">
                                    <currency:CurrencyTextBox.Style>
                                        <Style TargetType="{x:Type currency:CurrencyTextBox}">
                                            <Style.Triggers>
                                                <Trigger Property="Validation.HasError" Value="True">
                                                    <Setter Property="ToolTip" Value="Amount" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </currency:CurrencyTextBox.Style>
                                </currency:CurrencyTextBox>
                                <Label Content="Markup Value*" VerticalContentAlignment="Bottom" FontWeight="Bold" Width="100" Margin="20,0,0,0"/>
                                <!--<TextBox Width="150" x:Name="txt_MarkupValue" Text="{Binding Path = MarkupValue,UpdateSourceTrigger=PropertyChanged}" BorderBrush="#FF949494" materialDesign:HintAssist.Hint="Markup Value" BorderThickness="1" FontWeight="SemiBold" Margin="10,0,0,0" Padding="5,0,0,0"/>-->
                                <currency:CurrencyTextBox x:Name="txt_MarkupValue" Number="{Binding MarkupValue, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" StringFormat="N2" Width="130" Margin="10,0,0,0" BorderThickness="1" FontWeight="SemiBold" FontSize="14">
                                    <currency:CurrencyTextBox.Style>
                                        <Style TargetType="{x:Type currency:CurrencyTextBox}">
                                            <Style.Triggers>
                                                <Trigger Property="Validation.HasError" Value="True">
                                                    <Setter Property="ToolTip" Value="Amount" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </currency:CurrencyTextBox.Style>
                                </currency:CurrencyTextBox>
                                <Label Content="%" VerticalContentAlignment="Center" FontWeight="Bold" Width="15" Margin="5,0,0,0" Padding="0" HorizontalContentAlignment="Center" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                                <Label Content="Sale Price*" VerticalContentAlignment="Bottom" FontWeight="Bold" Width="100"/>
                                <!--<TextBox Width="200" x:Name="txt_Price" Text="{Binding Path = Price,UpdateSourceTrigger=PropertyChanged}" BorderBrush="#FF949494" materialDesign:HintAssist.Hint="Price" BorderThickness="1" FontWeight="SemiBold" Margin="10,0,0,0" Padding="5,0,0,0"/>-->
                                <currency:CurrencyTextBox x:Name="txt_Price" Number="{Binding Price, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" StringFormat="N2" Width="200" Margin="10,0,0,0" BorderThickness="1" FontWeight="SemiBold" FontSize="14">
                                    <currency:CurrencyTextBox.Style>
                                        <Style TargetType="{x:Type currency:CurrencyTextBox}">
                                            <Style.Triggers>
                                                <Trigger Property="Validation.HasError" Value="True">
                                                    <Setter Property="ToolTip" Value="Amount" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </currency:CurrencyTextBox.Style>
                                </currency:CurrencyTextBox>
                                <Label Content="Expiry Date*" VerticalContentAlignment="Bottom" FontWeight="Bold" Width="100" Margin="20,0,0,0"/>
                                <DatePicker Width="150" x:Name="dtp_ExpiryDate" SelectedDate="{Binding Path=ExpiryDate,Mode=TwoWay,TargetNullValue={x:Static System:DateTime.Now}}"  BorderBrush="#FF949494" materialDesign:CalendarAssist.IsHeaderVisible="True" materialDesign:HintAssist.Hint="Expiry Date" BorderThickness="1" FontWeight="SemiBold" Margin="10,0,0,0" Padding="5,0,0,0"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                                <Label Content="Stock*" VerticalContentAlignment="Bottom" FontWeight="Bold" Width="100" />
                                <!--<TextBox Width="200" x:Name="txt_Stock" Text="{Binding Path = Stock,UpdateSourceTrigger=PropertyChanged}" BorderBrush="#FF949494" materialDesign:HintAssist.Hint="Stock" BorderThickness="1" FontWeight="SemiBold" Margin="10,0,0,0" Padding="5,0,0,0"/>-->
                                <currency:CurrencyTextBox x:Name="txt_Stock" Number="{Binding Path=Stock, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" StringFormat="N2" Width="200" Margin="10,0,0,0" BorderThickness="1" FontWeight="SemiBold" FontSize="14">
                                    <currency:CurrencyTextBox.Style>
                                        <Style TargetType="{x:Type currency:CurrencyTextBox}">
                                            <Style.Triggers>
                                                <Trigger Property="Validation.HasError" Value="True">
                                                    <Setter Property="ToolTip" Value="Amount" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </currency:CurrencyTextBox.Style>
                                </currency:CurrencyTextBox>
                                <Label Content="Unit Measure*" VerticalContentAlignment="Bottom" FontWeight="Bold" Width="100" Margin="20,0,0,0"/>
                                <ComboBox x:Name="cmb_UnitMeasure" Width="150"  ItemsSource="{Binding Path=unitList,UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="UnitID" SelectedValue="{Binding UnitID}" DisplayMemberPath="UnitAbbr" materialDesign:ComboBoxAssist.ShowSelectedItem="true" materialDesign:HintAssist.Hint="Select Unit Measure" Margin="10,0,0,0" Padding="0,10,0,5"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                                <Label Content="Value*" VerticalContentAlignment="Bottom" FontWeight="Bold" Width="100" />
                                <currency:CurrencyTextBox x:Name="txt_value" Number="{Binding Path=Value, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" StringFormat="N2" Width="200" Margin="10,0,0,0" BorderThickness="1" FontWeight="SemiBold" FontSize="14">
                                    <currency:CurrencyTextBox.Style>
                                        <Style TargetType="{x:Type currency:CurrencyTextBox}">
                                            <Style.Triggers>
                                                <Trigger Property="Validation.HasError" Value="True">
                                                    <Setter Property="ToolTip" Value="Amount" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </currency:CurrencyTextBox.Style>
                                </currency:CurrencyTextBox>


                                <Button x:Name="btn_logs" Width="120" Height="30" Margin="158,5,0,0" BorderBrush="Black" HorizontalAlignment="Right" BorderThickness="0" Padding="0" Click="btn_logs_Click" >
                                    <Button.BitmapEffect>
                                        <DropShadowBitmapEffect Color="Black" Direction="320" Softness="0" ShadowDepth="0" Opacity="0" />
                                    </Button.BitmapEffect>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="Details"  Height="25" Width="25" Foreground="Black" />
                                        <TextBlock Text="SHOW LOGS" Foreground="Black" FontFamily="Champagne &amp; Limousines" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <StackPanel Visibility="Hidden" Orientation="Horizontal" Margin="10,10,0,0">
                                <Label Content="Side Effect*" VerticalContentAlignment="Top" FontWeight="Bold" Width="100"/>
                                <TextBox Width="480" Height="90" x:Name="txt_SideEffect" Text="{Binding Path = SideEffect,UpdateSourceTrigger=PropertyChanged}" BorderBrush="#FF949494" materialDesign:HintAssist.Hint="Side Effect" AcceptsReturn="True" BorderThickness="1" FontWeight="SemiBold" />
                            </StackPanel>



                        </StackPanel>

                    </StackPanel>
                </Border>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,290,0">
                        <materialDesign:PackIcon Foreground="Crimson" Kind="Magnify"  Height="25" Width="25"  VerticalAlignment="Center"/>
                        <Border Background="White" CornerRadius="5" BorderBrush="Black" BorderThickness="1">
                            <Border.Effect>
                                <DropShadowEffect Color="#FFB1B1B1"/>
                            </Border.Effect>
                            <TextBox x:Name="txt_Search" TextChanged="txt_Search_TextChanged" TextWrapping="Wrap"  FontSize="14" HorizontalAlignment="Stretch" Height="30" Margin="3 0 0 0" Width="400" BorderThickness="1,1,1,1" Background="{x:Null}" BorderBrush="{x:Null}"/>
                        </Border>
                    </StackPanel>
                    
                    <Button x:Name="btn_AddStock" Width="120" Height="30" Margin="10,0,0,0" BorderBrush="Black" HorizontalAlignment="Right" BorderThickness="0" Padding="0" Click="btn_AddStock_Click">
                        <!--<Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                --><!--<GradientStop Color="#FF979494" Offset="0.058"/>
                                <GradientStop Color="#FFE4E2E2" Offset="0.913"/>--><!--
                            </LinearGradientBrush>
                        </Button.Background>-->
                        <Button.BitmapEffect>
                            <DropShadowBitmapEffect Color="Black" Direction="320" Softness="0" ShadowDepth="0" Opacity="0" />
                        </Button.BitmapEffect>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="Add"  Height="25" Width="25" Foreground="Black" />
                            <TextBlock Text="ADD STOCK" Foreground="Black" FontFamily="Champagne &amp; Limousines" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="btn_New" Width="120" Height="30" Margin="10,0,0,0" BorderBrush="Black" HorizontalAlignment="Right" BorderThickness="0" Padding="0" Click="btn_New_Click">
                        <!--<Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF979494" Offset="0.058"/>
                                <GradientStop Color="#FFE4E2E2" Offset="0.913"/>
                            </LinearGradientBrush>
                        </Button.Background>-->
                        <Button.BitmapEffect>
                            <DropShadowBitmapEffect Color="Black" Direction="320" Softness="0" ShadowDepth="0" Opacity="0" />
                        </Button.BitmapEffect>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="AddCircle"  Height="25" Width="25" Foreground="Black" />
                            <TextBlock Text="NEW" Foreground="Black" FontFamily="Champagne &amp; Limousines" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btn_Edit" Width="120" Height="30" Margin="10,0,0,0" BorderBrush="Black" HorizontalAlignment="Right" BorderThickness="0" Padding="0" Click="btn_Edit_Click">
                        <!--<Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF979494" Offset="0.058"/>
                                <GradientStop Color="#FFE4E2E2" Offset="0.913"/>
                            </LinearGradientBrush>
                        </Button.Background>-->
                        <Button.BitmapEffect>
                            <DropShadowBitmapEffect Color="Black" Direction="320" Softness="0" ShadowDepth="0" Opacity="0" />
                        </Button.BitmapEffect>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="Edit"  Height="25" Width="25" Foreground="Black" />
                            <TextBlock Text="EDIT" Foreground="Black" FontFamily="Champagne &amp; Limousines" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="btn_Save" Width="120" Height="30" Margin="10,0,0,0" BorderBrush="Black" HorizontalAlignment="Right" BorderThickness="0" Padding="0" Click="btn_Save_Click">
                        <!--<Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF979494" Offset="0.058"/>
                                <GradientStop Color="#FFE4E2E2" Offset="0.913"/>
                            </LinearGradientBrush>
                        </Button.Background>-->
                        <Button.BitmapEffect>
                            <DropShadowBitmapEffect Color="Black" Direction="320" Softness="0" ShadowDepth="0" Opacity="0" />
                        </Button.BitmapEffect>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="ContentSave"  Height="25" Width="25" Foreground="Black" />
                            <TextBlock Text="SAVE" Foreground="Black" FontFamily="Champagne &amp; Limousines" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>


                </StackPanel>
            </StackPanel>

            <StackPanel Margin="0,5,0,0">
                <DataGrid x:Name="DG_Products" ItemsSource="{Binding Path=itemList,UpdateSourceTrigger=PropertyChanged}" CanUserSortColumns="False" Width="1240" CanUserAddRows="False" CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserResizeRows="False"  AutoGenerateColumns="False" Margin="20,0" Height="270" PreviewMouseDoubleClick="DG_Products_PreviewMouseDoubleClick">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding ItemDescription, UpdateSourceTrigger=PropertyChanged}" FontSize="11" Width="150" IsReadOnly="True">
                            <DataGridTextColumn.HeaderTemplate >
                                <DataTemplate>
                                    <TextBlock Text="DESCRIPTION" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" FontSize="11"/>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                            <DataGridTextColumn.ElementStyle>
                                <Style>
                                    <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                                    <Setter Property="TextBlock.TextAlignment" Value="Left"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding GenericName, UpdateSourceTrigger=PropertyChanged}" FontSize="11" Width="150" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style>
                                    <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                                    <Setter Property="TextBlock.TextAlignment" Value="Left"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.HeaderTemplate >
                                <DataTemplate>
                                    <TextBlock Text="GENERIC NAME" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" FontSize="11"/>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding CategoryDescription, UpdateSourceTrigger=PropertyChanged}" FontSize="11" Width="180" IsReadOnly="True">
                            <DataGridTextColumn.HeaderTemplate >
                                <DataTemplate>
                                    <TextBlock Text="CATEGORY" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" FontSize="11"/>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding ShelfDescription, UpdateSourceTrigger=PropertyChanged}" FontSize="11" Width="70" IsReadOnly="True">
                            <DataGridTextColumn.HeaderTemplate >
                                <DataTemplate>
                                    <TextBlock Text="STORE SHELVE" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" FontSize="11"/>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding PurchasePrice, UpdateSourceTrigger=PropertyChanged}" FontSize="11" Width="100" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="HorizontalAlignment" Value="Right" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.HeaderTemplate >
                                <DataTemplate>
                                    <TextBlock Text="PURCHASE PRICE" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" FontSize="11"/>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding Price, UpdateSourceTrigger=PropertyChanged}" FontSize="11" Width="100" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="HorizontalAlignment" Value="Right" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.HeaderTemplate >
                                <DataTemplate>
