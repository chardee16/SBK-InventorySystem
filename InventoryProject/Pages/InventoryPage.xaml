                            <Style TargetType="{x:Type currency:CurrencyTextBox}">
                                <Style.Triggers>
                                    <Trigger Property="Validation.HasError" Value="True">
                                        <Setter Property="ToolTip" Value="Amount" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </currency:CurrencyTextBox.Style>
                    </currency:CurrencyTextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                    <Label Content="Stocks:"  Width="100" FontSize="16" FontWeight="Bold"/>
                    <TextBox Text="{Binding Path = Stock,UpdateSourceTrigger=PropertyChanged}" Template="{StaticResource TextBoxBaseControlTemplate}" IsReadOnly="True" Height="30"  Width="150" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="16" BorderThickness="1"/>
                    <ComboBox ItemsSource="{Binding Path=unitList,UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="UnitID" SelectedValue="{Binding UnitID}" DisplayMemberPath="UnitAbbr"  Height="30" Text="Pcs" Width="80" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="16" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                    <Label Content="Barcode:"  Width="100" FontSize="16" FontWeight="Bold"/>
                    <TextBox Text="{Binding Path = Barcode,UpdateSourceTrigger=PropertyChanged}" Template="{StaticResource TextBoxBaseControlTemplate}" Height="30"  Width="250" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="16" BorderThickness="1"/>
                 
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                    <Button x:Name="btn_AddStock" Width="100" Padding="0" Height="50" Margin="0,20,0,0" Background="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Left" Click="btn_AddStock_Click" >
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="AddShoppingCart"  Height="30" Width="50" Foreground="Black" />
                            <TextBlock Text="ADD STOCK" Foreground="Black" FontFamily="Champagne &amp; Limousines" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btn_Edit" Width="100" Height="50" Margin="0,20,0,0" Background="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Left" Click="btn_Edit_Click">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="Edit"  Height="30" Width="50" Foreground="Black" />
                            <TextBlock Text="EDIT" Foreground="Black" FontFamily="Champagne &amp; Limousines" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Width="100" Height="50" Margin="0,20,0,0" Background="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Left">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="Delete"  Height="30" Width="50" Foreground="Black" />
                            <TextBlock Text="DELETE" Foreground="Black" FontFamily="Champagne &amp; Limousines" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button  Width="100" Height="50" Margin="0,20,0,0" Background="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Left">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="Export"  Height="30" Width="50" Foreground="Black" />
                            <TextBlock Text="EXPORT" Foreground="Black" FontFamily="Champagne &amp; Limousines" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                
                
            </StackPanel>-->
            
            <StackPanel Orientation="Vertical" Width="1200" Margin="45,20,0,0">
                <StackPanel Orientation="Horizontal" Margin="0,0,290,0">
                    <materialDesign:PackIcon Foreground="Crimson" Kind="Magnify"  Height="25" Width="25"  VerticalAlignment="Center"/>
                    <Border Background="White" CornerRadius="5" BorderBrush="Black" BorderThickness="0">
                        <Border.Effect>
                            <DropShadowEffect Color="#FFB1B1B1"/>
                        </Border.Effect>
                        <TextBox x:Name="txt_Search" TextWrapping="Wrap" FontSize="16" HorizontalAlignment="Stretch" Height="30"  Width="400"  PreviewKeyDown="txt_Search_PreviewKeyDown" TextChanged="txt_Search_TextChanged">
                           
                        </TextBox>
                    </Border>
                </StackPanel>
                <DataGrid x:Name="DG_Items" ItemsSource="{Binding Path=itemList,UpdateSourceTrigger=PropertyChanged}" CanUserSortColumns="False" Width="1200" CanUserAddRows="False" CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserResizeRows="False"  AutoGenerateColumns="False" Margin="0,10,0,0" Height="540" PreviewMouseDoubleClick="DG_Items_PreviewMouseDoubleClick" FontSize="12">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Path=ItemName,UpdateSourceTrigger=PropertyChanged}" Header="ITEM NAME" Width="230" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style>
                                    <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                                    <Setter Property="TextBlock.TextAlignment" Value="Left"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding Path=GenericName,UpdateSourceTrigger=PropertyChanged}" Width="150" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style>
                                    <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                                    <Setter Property="TextBlock.TextAlignment" Value="Left"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.HeaderTemplate >
                                <DataTemplate>
                                    <TextBlock Text="GENERIC NAME" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding Path=CategoryDescription,UpdateSourceTrigger=PropertyChanged}" Header="CATEGORY" Width="220" IsReadOnly="True"/>
                        <DataGridTextColumn Binding="{Binding Path=ShelfDescription,UpdateSourceTrigger=PropertyChanged}" Width="80" IsReadOnly="True">
                            <DataGridTextColumn.HeaderTemplate >
                                <DataTemplate>
                                    <TextBlock Text="STORE SHELVE" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding Path=Price,UpdateSourceTrigger=PropertyChanged}" Width="120" IsReadOnly="True">
                            <DataGridTextColumn.HeaderTemplate >
                                <DataTemplate>
                                    <TextBlock Text="SELLING PRICE" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding Path=ExpiryDate,UpdateSourceTrigger=PropertyChanged}" Width="120" IsReadOnly="True">
                            <DataGridTextColumn.HeaderTemplate >
                                <DataTemplate>
                                    <TextBlock Text="EXPIRY DATE" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                        </DataGridTextColumn>

                        <DataGridTextColumn Visibility="Hidden" Binding="{Binding Path=SideEffect,UpdateSourceTrigger=PropertyChanged}" Width="170" IsReadOnly="True">
                            <DataGridTextColumn.HeaderTemplate >
                                <DataTemplate>
                                    <TextBlock Text="SIDE EFFECT" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                        </DataGridTextColumn>

                        <DataGridTextColumn Visibility="Visible" Binding="{Binding Path=UnitAbbr,UpdateSourceTrigger=PropertyChanged}" Width="170" IsReadOnly="True">
                            <DataGridTextColumn.HeaderTemplate >
                                <DataTemplate>
                                    <TextBlock Text="UNIT MEASURE" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                        </DataGridTextColumn>


                        <DataGridTextColumn Binding="{Binding Path=Stock,UpdateSourceTrigger=PropertyChanged}" Header="STOCKS" Width="100" IsReadOnly="True"/>
                        
                    </DataGrid.Columns>
                </DataGrid>

                
                
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Page>
