                    <TextBlock Text="{Binding Path = ItemCount,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="30" FontWeight="Bold"/>
                </StackPanel>
                

                <StackPanel Orientation="Horizontal" Margin="10,20,0,0">
                    <Label Content="Item Code:" Width="100" FontSize="16" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Path = ItemCode,UpdateSourceTrigger=PropertyChanged}" Width="150" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="16"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                    <Label Content="Item Name:"  Width="100" FontSize="16" FontWeight="Bold"/>
                    <TextBox x:Name="txt_ItemName" Text="{Binding Path = ItemName,UpdateSourceTrigger=PropertyChanged}" Template="{StaticResource TextBoxBaseControlTemplate}" Height="30"  Width="200" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="16" BorderThickness="1"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                    <Label Content="Description:"  Width="100" FontSize="16" FontWeight="Bold"/>
                    <TextBox Text="{Binding Path = ItemDescription,UpdateSourceTrigger=PropertyChanged}" Template="{StaticResource TextBoxBaseControlTemplate}" Height="30"  Width="200" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="16" BorderThickness="1"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                    <Label Content="Category:"  Width="100" FontSize="16" FontWeight="Bold"/>
                    <ComboBox ItemsSource="{Binding Path=itemCategories,UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="CategoryID" SelectedValue="{Binding CategoryID}" DisplayMemberPath="CategoryDescription"  Height="30"  Width="230" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="16" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                    <Label Content="Price:"  Width="100" FontSize="16" FontWeight="Bold"/>
                    <currency:CurrencyTextBox x:Name="myCurrencyTextBox" Number="{Binding Price, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Template="{StaticResource TextBoxBaseControlTemplate}" Height="30" StringFormat="N2" Width="200" Margin="20,0,0,0" BorderThickness="1" FontSize="16">
