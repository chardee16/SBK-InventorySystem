<Page x:Class="InventoryProject.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      xmlns:local="clr-namespace:InventoryProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="1280" d:DataContext="{d:DesignInstance local:HomePage}"
      Title="HomePage" >

    <Grid Background="#FFE4E4E4">
        <StackPanel Orientation="Vertical">
            <lvc:CartesianChart Series="{Binding SeriesCollection}" LegendLocation="Left" Height="271" Margin="10,0">
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="Summary" Foreground="Black" Labels="{Binding Labels}">
                        <lvc:Axis.Separator>
                            <lvc:Separator Stroke="White"/>
                        </lvc:Axis.Separator>
                    </lvc:Axis>
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Sold Products" LabelFormatter="{Binding Formatter}"></lvc:Axis>
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>

            <StackPanel Orientation="Horizontal" Margin="10,0">
                <lvc:PieChart Series="{Binding PieCollection}" LegendLocation="Right" Margin="0,10,0,0" DataClick="Chart_OnDataClick" Hoverable="False" DataTooltip="{x:Null}" Width="462" Height="325">
                </lvc:PieChart>
                <lvc:Gauge VerticalAlignment="Center" Margin="50,0,0,0"
                   From="0" To="{Binding TotalStocks}" Value="{Binding RemainingStocks}"
                   LabelsVisibility="Hidden" Width="300" Height="185">
                    <lvc:Gauge.GaugeActiveFill>
                        <LinearGradientBrush>
                            <GradientStop Color="Yellow" Offset="0.0" />
                            <GradientStop Color="Orange" Offset="0.5" />
                            <GradientStop Color="Red" Offset="1.0" />
                        </LinearGradientBrush>
                    </lvc:Gauge.GaugeActiveFill>
                </lvc:Gauge>
                <Border Margin="50,10,10,10" BorderThickness="1" Width="398" BorderBrush="Black" CornerRadius="10" Height="329">
                    <StackPanel Orientation="Vertical" Margin="0.2,0.2,-0.4,0.2">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                            <Label Content="OVERVIEW" FontFamily="Book Antiqua" FontSize="20" Width="120" Height="30" Margin="0,0,0,0" HorizontalAlignment="Left"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,20,9.8,0" Width="377">
                            <StackPanel Orientation="Vertical">
                                <Label Content="TOTAL INCOME LAST FOR YEAR" FontFamily="Arial" FontSize="14" Width="374" Height="30" Margin="0,0,0,0" HorizontalContentAlignment="Center" FontWeight="ExtraLight" HorizontalAlignment="Left" Foreground="#DD7D7D7D"/>
                                <TextBlock x:Name="txtblck_LastYearIncome" Text="{Binding LastYearIncome, UpdateSourceTrigger=PropertyChanged,StringFormat='{}{0:#,0.00;#(#,##0.00)}'}" FontFamily="Arial" FontSize="20" Width="384" Height="30" Margin="0,0,0,0" FontWeight="ExtraBold" HorizontalAlignment="Center" Foreground="#DD000000" TextAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center" Margin="10,20,9.8,0" Width="377">
                            <StackPanel Orientation="Vertical">
                                <Label Content="TOTAL INCOME FOR THIS YEAR" FontFamily="Arial" FontSize="14" Width="389" Height="30" Margin="0,0,0,0" HorizontalContentAlignment="Center" FontWeight="ExtraLight" HorizontalAlignment="Left" Foreground="#DD7D7D7D"/>
                                <TextBlock x:Name="txtblck_ThisYearIncome"  Text="{Binding ThisYearIncome,UpdateSourceTrigger=PropertyChanged,StringFormat='{}{0:#,0.00;#(#,##0.00)}'}" FontFamily="Arial" FontSize="20" Width="384" Height="30" Margin="0,0,0,0" FontWeight="ExtraBold" HorizontalAlignment="Center" Foreground="#DD000000" TextAlignment="Center"/>
                                <TextBlock x:Name="txtblck_ResultIncome"  Text="{Binding ResultIncome,UpdateSourceTrigger=PropertyChanged,StringFormat='{}{0:#,0.00;#(#,##0.00)}'}" FontFamily="Arial" FontSize="14" Width="384" Height="30" Margin="0,35,0,0" FontWeight="ExtraBold" HorizontalAlignment="Center" Foreground="#DD000000" TextAlignment="Center"/>
                                <TextBlock  x:Name="txtblck_ResultPercentageIncome"  Text="{Binding ResultPercentageIncome,UpdateSourceTrigger=PropertyChanged,StringFormat='{}{0:#,0.00;#(#,##0.00)}'}" FontFamily="Arial" FontSize="14" Width="384" Height="30" Margin="0,0,0,0" FontWeight="ExtraBold" HorizontalAlignment="Center" Foreground="#DD000000" TextAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                </Border>

            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
