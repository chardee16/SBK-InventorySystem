<Page x:Class="InventoryProject.Pages.SalesReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
      xmlns:local="clr-namespace:InventoryProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="1280"
      Title="SalesReportPage">

    <Page.Resources>

        <ResourceDictionary>
            <Style x:Key="_ListBoxItemStyle" TargetType="{x:Type ListBoxItem}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ListBoxItem}">
                            <Border x:Name="_Border"
                                Padding="2"
                                SnapsToDevicePixels="true">
                                <ContentPresenter />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="true">
                                    <Setter TargetName="_Border" Property="Background" Value="Yellow"/>

                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="_ListBoxCheckbox" TargetType="{x:Type ListBoxItem}">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="HorizontalContentAlignment" Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
                <Setter Property="VerticalContentAlignment" Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
                <Setter Property="Padding" Value="2,0,0,0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ListBoxItem}">
                            <Border x:Name="Bd" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true">

                                <ContentPresenter KeyboardNavigation.IsTabStop="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" Width="{TemplateBinding MaxWidth}" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="true">
                                    <Setter Property="Background" TargetName="Bd" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}"/>
                                    <Setter Property="FontSize" Value="9" />
                                </Trigger>
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsSelected" Value="true"/>
                                        <Condition Property="Selector.IsSelectionActive" Value="false"/>
                                    </MultiTrigger.Conditions>
                                    <Setter Property="Background" TargetName="Bd" Value="{DynamicResource {x:Static SystemColors.InactiveSelectionHighlightBrushKey}}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}}"/>
                                </MultiTrigger>
                                <Trigger Property="IsEnabled" Value="false">
                                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Page.Resources>


    <Grid Background="#FFE4E4E4">
        <StackPanel Orientation="Horizontal">

            <StackPanel Orientation="Vertical" Width="780">
                <Border Margin="10" Background="White" Height="120" CornerRadius="5">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Vertical" Width="200" HorizontalAlignment="Left">
                            <Label Content="FILTER" FontFamily="Book Antiqua" FontSize="20" Width="100" Height="30" Margin="10,0,0,0" HorizontalAlignment="Left"/>
                            <Label Content="Date From" Margin="10,20,0,0" Height="25" Width="150" HorizontalAlignment="Left" FontWeight="DemiBold" />
                            <DatePicker Width="160"  x:Name="dtp_DateFrom" SelectedDate="{Binding Path=DateStart,Mode=TwoWay,TargetNullValue={x:Static System:DateTime.Now}}" HorizontalAlignment="Left" FontSize="16"  BorderBrush="#FF949494" materialDesign:CalendarAssist.IsHeaderVisible="True" materialDesign:HintAssist.Hint="Date Start" BorderThickness="1" FontWeight="SemiBold" Margin="10,0,0,0" Padding="5,0,0,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Width="200" HorizontalAlignment="Left">
                            <Label Content="Date From" Margin="10,50,0,0" Width="150" HorizontalAlignment="Left" FontWeight="DemiBold" />
                            <DatePicker Width="160"  x:Name="dtp_ExpiryDate" SelectedDate="{Binding Path=DateEnd,Mode=TwoWay,TargetNullValue={x:Static System:DateTime.Now}}" HorizontalAlignment="Left" FontSize="16"  BorderBrush="#FF949494" materialDesign:CalendarAssist.IsHeaderVisible="True" materialDesign:HintAssist.Hint="Date End" BorderThickness="1" FontWeight="SemiBold" Margin="10,0,0,0" Padding="5,0,0,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Width="140" HorizontalAlignment="Left">
                            <Button x:Name="btn_Search" Width="120" Height="30" Margin="0,75,0,0" BorderBrush="Black" HorizontalAlignment="Left" BorderThickness="1" Padding="0" Click="btn_Search_Click" >
                                <Button.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FF979494" Offset="0.058"/>
                                        <GradientStop Color="#FFE4E2E2" Offset="0.913"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                                <Button.BitmapEffect>
                                    <DropShadowBitmapEffect Color="Black" Direction="320" Softness="1" ShadowDepth="10" Opacity="0.5" />
                                </Button.BitmapEffect>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="Search"  Height="25" Width="25" Foreground="Black" />
                                    <TextBlock Text="SEARCH" Foreground="Black" FontFamily="Champagne &amp; Limousines" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                        </StackPanel>
                        <StackPanel Orientation="Vertical" Width="216" HorizontalAlignment="Left">
                            <Button x:Name="btn_allview" Click="btn_allview_Click" Width="142" Height="30" Margin="60,75,0,0" BorderBrush="Black" HorizontalAlignment="Left" BorderThickness="1" Padding="0" >
                                <Button.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FF979494" Offset="0.058"/>
                                        <GradientStop Color="#FFE4E2E2" Offset="0.913"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                                <Button.BitmapEffect>
                                    <DropShadowBitmapEffect Color="Black" Direction="320" Softness="1" ShadowDepth="10" Opacity="0.5" />
                                </Button.BitmapEffect>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="ViewColumn"  Height="25" Width="25" Foreground="Black" />
                                    <TextBlock Text="SHOW STOCKS" Foreground="Black" FontFamily="Champagne &amp; Limousines" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                        </StackPanel>
                    </StackPanel>

                </Border>
                <DataGrid x:Name="DG_Items" ItemsSource="{Binding Path=itemList,UpdateSourceTrigger=PropertyChanged}" CanUserSortColumns="False" Width="760" CanUserAddRows="False" CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserResizeRows="False"  AutoGenerateColumns="False" Margin="10,0,10,10" Height="490" FontSize="12">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Path=ItemDescription,UpdateSourceTrigger=PropertyChanged}" Header="DESCRIPTION" Width="152" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style>
                                    <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                                    <Setter Property="TextBlock.TextAlignment" Value="Left"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding Path=CategoryDescription,UpdateSourceTrigger=PropertyChanged}" Width="*" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style>
                                    <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                                    <Setter Property="TextBlock.TextAlignment" Value="Left"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.HeaderTemplate >
                                <DataTemplate>
                                    <TextBlock Text="CATEGORY" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding Path=Quantity,UpdateSourceTrigger=PropertyChanged}" Header="QTY SOLD" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Binding="{Binding Path=Price,UpdateSourceTrigger=PropertyChanged}" Header="PRICE" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Binding="{Binding Path=GrossAmount,UpdateSourceTrigger=PropertyChanged}" Width="*" IsReadOnly="True">
                            <DataGridTextColumn.HeaderTemplate >
                                <DataTemplate>
                                    <TextBlock Text="GROSS AMOUNT" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding Path=DiscountAmount,UpdateSourceTrigger=PropertyChanged}" Width="*" IsReadOnly="True">
                            <DataGridTextColumn.HeaderTemplate >
                                <DataTemplate>
                                    <TextBlock Text="TOTAL DISCOUNT" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                        </DataGridTextColumn>
                        <DataGridTextColumn Visibility="Hidden" Binding="{Binding Path=Income,UpdateSourceTrigger=PropertyChanged}" Width="*" IsReadOnly="True">
                            <DataGridTextColumn.HeaderTemplate >
                                <DataTemplate>
                                    <TextBlock Text="INCOME"  HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding Path=TotalAmount,UpdateSourceTrigger=PropertyChanged}" Width="*" IsReadOnly="True">
                            <DataGridTextColumn.HeaderTemplate >
                                <DataTemplate>
                                    <TextBlock Text="NET AMOUNT" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                                </DataTemplate>
                            </DataGridTextColumn.HeaderTemplate>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
            <StackPanel Orientation="Vertical" Width="500">
                <Border Margin="0,10,10,10" Background="White" Height="180" CornerRadius="5">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                            <Label Content="SUMMARY" FontFamily="Book Antiqua" FontSize="20" Width="120" Height="30" Margin="10,0,0,0" HorizontalAlignment="Left"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">

                            <StackPanel Orientation="Vertical">
                                <Label Content="TOTAL ITEM SOLD" FontFamily="Arial" FontSize="14" Width="140" Height="30" Margin="0,0,0,0" HorizontalContentAlignment="Center" FontWeight="ExtraLight" HorizontalAlignment="Left" Foreground="#DD7D7D7D"/>
                                <TextBlock Text="{Binding Path = TotalItemCount,UpdateSourceTrigger=PropertyChanged}" FontFamily="Arial" FontSize="20" Width="160" Height="30" Margin="0,0,0,0" FontWeight="ExtraBold" HorizontalAlignment="Right" Foreground="#DD000000" TextAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <Label Content="TOTAL DISCOUNT" FontFamily="Arial" FontSize="14" Width="140" Height="30" Margin="0,0,0,0" HorizontalContentAlignment="Center" FontWeight="ExtraLight" HorizontalAlignment="Left" Foreground="#DD7D7D7D"/>
                                <TextBlock Text="{Binding Path = TotalDiscountAmount,UpdateSourceTrigger=PropertyChanged,StringFormat='{}{0:#,#.00;#(#,##0.00)}'}" FontFamily="Arial" FontSize="20" Width="160" Height="30" Margin="0,0,0,0" FontWeight="ExtraBold" HorizontalAlignment="Right" Foreground="#DD000000" TextAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <Label Content="TOTAL NET" FontFamily="Arial" FontSize="14" Width="140" Height="30" Margin="0,0,0,0" FontWeight="ExtraLight" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Foreground="#DD7D7D7D"/>
                                <TextBlock Text="{Binding Path = TotalNetAmount,UpdateSourceTrigger=PropertyChanged,StringFormat='{}{0:#,#.00;#(#,##0.00)}'}" FontFamily="Arial" FontSize="20" Width="160" Height="30" Margin="0,0,0,0" FontWeight="ExtraBold" HorizontalAlignment="Right" Foreground="#DD000000" TextAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <StackPanel Orientation="Vertical">
                                <Label Content="TOTAL INCOME" FontFamily="Arial" FontSize="14" Width="140" Height="30" Margin="0,0,0,0" HorizontalContentAlignment="Center" FontWeight="ExtraLight" HorizontalAlignment="Left" Foreground="#DD7D7D7D"/>
                                <TextBlock Text="{Binding Path = TotalIncome,UpdateSourceTrigger=PropertyChanged,StringFormat='{}{0:#,#.00;#(#,##0.00)}'}" FontFamily="Arial" FontSize="20" Width="160" Height="30" Margin="0,0,0,0" FontWeight="ExtraBold" HorizontalAlignment="Left" Foreground="#DD000000" TextAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Margin="0,0,10,10" Background="White" Height="430" CornerRadius="5">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                            <Label Content="Cut-Off:" FontFamily="Arial" FontSize="16" Width="80" Height="30" Margin="10,0,0,0" HorizontalAlignment="Left"/>
                            <DatePicker Width="160" x:Name="dtp_DateFromReport" SelectedDate="{Binding Path=DateStartReport,Mode=TwoWay,TargetNullValue={x:Static System:DateTime.Now}}" HorizontalAlignment="Left" FontSize="16"  BorderBrush="#FF949494" materialDesign:CalendarAssist.IsHeaderVisible="True" materialDesign:HintAssist.Hint="Date Start" BorderThickness="1" FontWeight="SemiBold" Margin="10,0,0,0" Padding="5,0,0,0"/>
                            <DatePicker Width="160"  x:Name="dtp_DateToReport" SelectedDate="{Binding Path=DateEndReport,Mode=TwoWay,TargetNullValue={x:Static System:DateTime.Now}}" HorizontalAlignment="Left" FontSize="16"  BorderBrush="#FF949494" materialDesign:CalendarAssist.IsHeaderVisible="True" materialDesign:HintAssist.Hint="Date End" BorderThickness="1" FontWeight="SemiBold" Margin="40,0,0,0" Padding="5,0,0,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Vertical">
                                <Label Content="Name" Foreground="#DD7D7D7D" FontFamily="Arial" FontSize="16" Width="80" Height="30" Margin="14,0,0,0" HorizontalAlignment="Left"/>
                                <ListBox x:Name="lb_name"  ItemContainerStyle="{DynamicResource _ListBoxItemStyle}" ItemsSource="{Binding Path=genericMedList,UpdateSourceTrigger=PropertyChanged}" Margin="14,0,0,0" ScrollViewer.HorizontalScrollBarVisibility="Visible" SelectedValuePath="GenericID" SelectedValue="{Binding GenericID}" DisplayMemberPath="GenericName" HorizontalAlignment="Left" Height="110" VerticalAlignment="Top" Width="216" BorderThickness="2" Background="#FFC9C7C7">
                                </ListBox>
                            </StackPanel>
                            <Label Content="&gt;&gt;" HorizontalContentAlignment="Center" FontFamily="Book Antiqua" FontSize="14" Width="30" Height="30" Margin="0,30,0,0" HorizontalAlignment="Center"/>
                            <StackPanel Orientation="Vertical">
                                <Label Content="Selected Name" Foreground="#DD7D7D7D" FontFamily="Arial" FontSize="16" Width="150" Height="30" Margin="0,0,0,0" HorizontalAlignment="Left"/>
                                <ListBox x:Name="lb_nameselected" ItemsSource="{Binding Path=NameSelected,UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="GenericID" SelectedValue="{Binding GenericID}" DisplayMemberPath="GenericName" ItemContainerStyle="{DynamicResource _ListBoxItemStyle}" Margin="0,0,0,0" ScrollViewer.HorizontalScrollBarVisibility="Visible"  HorizontalAlignment="Left" Height="110" VerticalAlignment="Top" Width="216" BorderThickness="2" Background="#FFF5F5DC">
                                </ListBox>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Vertical">
                                <Label Content="Category" Foreground="#DD7D7D7D" FontFamily="Arial" FontSize="16" Width="90" Height="30" Margin="14,0,0,0" HorizontalAlignment="Left"/>
                                <ListBox x:Name="lb_category" ItemContainerStyle="{DynamicResource _ListBoxItemStyle}" ItemsSource="{Binding Path=itemCategories,UpdateSourceTrigger=PropertyChanged}" Margin="14,0,0,0" ScrollViewer.HorizontalScrollBarVisibility="Visible" SelectedValuePath="CategoryID" SelectedValue="{Binding CategoryID}" DisplayMemberPath="CategoryDescription"  HorizontalAlignment="Left" Height="170" VerticalAlignment="Top" Width="216" BorderThickness="2" Background="#FFC9C7C7">
                                </ListBox>
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="btn_view" Click="btn_view_Click" Width="182" Height="30" Margin="20,8,0,0" BorderBrush="Black" HorizontalAlignment="Left" BorderThickness="1" Padding="0" >
                                        <Button.Background>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#FF979494" Offset="0.058"/>
                                                <GradientStop Color="#FFE4E2E2" Offset="0.913"/>
                                            </LinearGradientBrush>
                                        </Button.Background>
                                        <Button.BitmapEffect>
                                            <DropShadowBitmapEffect Color="Black" Direction="320" Softness="1" ShadowDepth="10" Opacity="0.5" />
                                        </Button.BitmapEffect>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="ViewColumn"  Height="25" Width="25" Foreground="Black" />
                                            <TextBlock Text="VIEW AVAILABLE STOCKS" Foreground="Black" FontFamily="Champagne &amp; Limousines" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                            <Label Content="&gt;&gt;" HorizontalContentAlignment="Center" FontFamily="Book Antiqua" FontSize="14" Width="30" Height="30" Margin="0,-10,0,0" HorizontalAlignment="Center"/>
                            <StackPanel Orientation="Vertical">
                                <Label Content="Selected Category" Foreground="#DD7D7D7D" FontFamily="Arial" FontSize="16" Width="180" Height="30" Margin="0,0,0,0" HorizontalAlignment="Left"/>
                                <ListBox x:Name="lb_selectedcategory" SelectedValuePath="CategoryID" SelectedValue="{Binding CategoryID}" DisplayMemberPath="CategoryDescription" ItemsSource="{Binding Path=itemCategoriesSelected,UpdateSourceTrigger=PropertyChanged}" ItemContainerStyle="{DynamicResource _ListBoxItemStyle}" Margin="0,0,0,0" ScrollViewer.HorizontalScrollBarVisibility="Visible" HorizontalAlignment="Left" Height="170" VerticalAlignment="Top" Width="216" BorderThickness="2" Background="#FFF5F5DC">
                                </ListBox>
                                <Button x:Name="btn_Generate" Click="btn_Generate_Click" Width="120" Height="30" Margin="95,8,0,0" BorderBrush="Black" HorizontalAlignment="Left" BorderThickness="1" Padding="0" >
                                    <Button.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FF979494" Offset="0.058"/>
                                            <GradientStop Color="#FFE4E2E2" Offset="0.913"/>
                                        </LinearGradientBrush>
                                    </Button.Background>
                                    <Button.BitmapEffect>
                                        <DropShadowBitmapEffect Color="Black" Direction="320" Softness="1" ShadowDepth="10" Opacity="0.5" />
                                    </Button.BitmapEffect>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon HorizontalAlignment="Center"  Kind="Report"  Height="25" Width="25" Foreground="Black" />
                                        <TextBlock Text="GENERATE" Foreground="Black" FontFamily="Champagne &amp; Limousines" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
